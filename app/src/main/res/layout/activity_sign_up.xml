<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/mayden">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        android:backgroundTint="#74FFFFFF"
        app:cardElevation="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="24dp"
            android:background="@drawable/custom_input">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/signup"
                android:textStyle="bold"
                android:textSize="36dp"
                android:textAlignment="center"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/activity_signup_et_username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_input"
                android:layout_marginTop="40dp"
                android:padding="10dp"
                android:hint="@string/username"
                android:textColor="@color/white"/>
            <EditText
                android:id="@+id/activity_signup_et_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_input"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:hint="@string/email"
                android:textColor="@color/white"/>
            <EditText
                android:id="@+id/activity_signup_et_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_input"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:hint="@string/password"
                android:textColor="@color/white"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/activity_signup_et_confirm_password"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_input"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:hint="@string/confirmation_code"
                    android:textColor="@color/white"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/get_code"
                    android:textAllCaps="false"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/custom_button"
                    android:layout_marginLeft="20dp"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/activity_signup_btn_signup"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="@string/signup"
                android:textSize="18dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_button"/>

            <TextView
                android:id="@+id/activity_signup_newAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_account"
                android:layout_gravity="center"
                android:padding="8dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/blue_700"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>